<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.HospitalController" styleClass="dashboard-root">
    
    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="navbar">
            <padding>
                <Insets top="15" right="30" bottom="15" left="30"/>
            </padding>
            
            <VBox>
                <Text text="VitalAid" styleClass="navbar-title"/>
                <Text text="Hospital Dashboard" styleClass="navbar-subtitle"/>
            </VBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Notification Bell -->
            <Button fx:id="notificationButton" styleClass="icon-button" onAction="#showNotifications">
                <graphic>
                    <HBox alignment="CENTER">
                        <Text text="ðŸ””" styleClass="notification-icon"/>
                        <Label fx:id="notificationBadge" styleClass="notification-badge" visible="false"/>
                    </HBox>
                </graphic>
            </Button>
            
            <!-- User Menu -->
            <MenuButton styleClass="user-menu">
                <graphic>
                    <HBox spacing="10" alignment="CENTER">
                        <Text text="ðŸ¥" style="-fx-font-size: 24px;"/>
                        <VBox alignment="CENTER_LEFT">
                            <Text fx:id="hospitalName" text="Hospital Name" styleClass="user-name"/>
                            <Text text="Hospital" styleClass="user-role"/>
                        </VBox>
                    </HBox>
                </graphic>
                <items>
                    <MenuItem text="Hospital Profile"/>
                    <MenuItem text="Settings"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Logout" onAction="#handleLogout"/>
                </items>
            </MenuButton>
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="content-scroll">
            <VBox spacing="25" styleClass="dashboard-content">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>
                
                <!-- Welcome Section -->
                <VBox spacing="10" styleClass="welcome-section">
                    <Text fx:id="welcomeText" text="Welcome!" styleClass="welcome-title"/>
                    <Text text="Manage your hospital's blood bank, plasma, and ventilator resources." 
                         styleClass="welcome-subtitle"/>
                </VBox>
                
                <!-- Statistics Cards -->
                <GridPane hgap="20" vgap="20">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                    </columnConstraints>
                    
                    <!-- Total Blood Units -->
                    <VBox spacing="10" styleClass="stat-card" GridPane.columnIndex="0">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <Text text="ðŸ©¸" styleClass="stat-icon"/>
                            <VBox>
                                <Text text="Blood Units" styleClass="stat-label"/>
                                <Text fx:id="totalBloodText" text="0" styleClass="stat-value"/>
                            </VBox>
                        </HBox>
                    </VBox>
                    
                    <!-- Total Plasma Units -->
                    <VBox spacing="10" styleClass="stat-card" GridPane.columnIndex="1">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <Text text="ðŸ’‰" styleClass="stat-icon"/>
                            <VBox>
                                <Text text="Plasma Units" styleClass="stat-label"/>
                                <Text fx:id="totalPlasmaText" text="0" styleClass="stat-value"/>
                            </VBox>
                        </HBox>
                    </VBox>
                    
                    <!-- Available Ventilators -->
                    <VBox spacing="10" styleClass="stat-card" GridPane.columnIndex="2">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <Text text="ðŸ«" styleClass="stat-icon"/>
                            <VBox>
                                <Text text="Ventilators" styleClass="stat-label"/>
                                <Text fx:id="availableVentilatorsText" text="0/0" styleClass="stat-value-small"/>
                            </VBox>
                        </HBox>
                    </VBox>
                    
                    <!-- Pending Requests -->
                    <VBox spacing="10" styleClass="stat-card-highlight" GridPane.columnIndex="3">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <VBox alignment="CENTER" spacing="5">
                            <Text text="Pending Requests" styleClass="stat-label" 
                                 style="-fx-fill: white;"/>
                            <Text fx:id="pendingRequestsText" text="0" 
                                 style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-fill: white;"/>
                        </VBox>
                    </VBox>
                </GridPane>
                
                <!-- Tab Pane for Different Sections -->
                <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" styleClass="main-tab-pane">
                    
                    <!-- Blood Stock Tab -->
                    <Tab text="ðŸ©¸ Blood Stock">
                        <VBox spacing="15" styleClass="tab-content">
                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>
                            
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <Text text="Blood Inventory" styleClass="section-title"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button text="+ Add Stock" styleClass="btn-primary" onAction="#addBloodStock"/>
                                <Button text="Update Stock" styleClass="btn-secondary" onAction="#updateBloodStock"/>
                                <Button text="Refresh" styleClass="btn-outline" onAction="#refreshBloodStock"/>
                            </HBox>
                            
                            <Separator/>
                            
                            <TableView fx:id="bloodStockTable" prefHeight="400">
                                <columns>
                                    <TableColumn fx:id="bloodGroupColumn" text="Blood Group" prefWidth="120"/>
                                    <TableColumn fx:id="bloodQuantityColumn" text="Quantity (ml)" prefWidth="120"/>
                                    <TableColumn fx:id="bloodThresholdColumn" text="Threshold" prefWidth="100"/>
                                    <TableColumn fx:id="bloodStatusColumn" text="Status" prefWidth="100"/>
                                    <TableColumn fx:id="bloodExpiryColumn" text="Expiry Date" prefWidth="120"/>
                                    <TableColumn fx:id="bloodLastUpdatedColumn" text="Last Updated" prefWidth="150"/>
                                    <TableColumn fx:id="bloodActionColumn" text="Action" prefWidth="150"/>
                                </columns>
                            </TableView>
                            
                            <!-- Low Stock Alerts -->
                            <VBox fx:id="lowStockAlertBox" spacing="10" visible="false">
                                <Text text="âš ï¸ Low Stock Alerts" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #e74c3c;"/>
                                <ListView fx:id="lowStockList" prefHeight="100"/>
                            </VBox>
                        </VBox>
                    </Tab>
                    
                    <!-- Plasma Stock Tab -->
                    <Tab text="ðŸ’‰ Plasma Stock">
                        <VBox spacing="15" styleClass="tab-content">
                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>
                            
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <Text text="Plasma Inventory" styleClass="section-title"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button text="+ Add Stock" styleClass="btn-primary" onAction="#addPlasmaStock"/>
                                <Button text="Update Stock" styleClass="btn-secondary" onAction="#updatePlasmaStock"/>
                            </HBox>
                            
                            <Separator/>
                            
                            <TableView fx:id="plasmaStockTable" prefHeight="400">
                                <columns>
                                    <TableColumn fx:id="plasmaGroupColumn" text="Blood Group" prefWidth="120"/>
                                    <TableColumn fx:id="plasmaQuantityColumn" text="Quantity (ml)" prefWidth="120"/>
                                    <TableColumn fx:id="plasmaThresholdColumn" text="Threshold" prefWidth="100"/>
                                    <TableColumn fx:id="plasmaStatusColumn" text="Status" prefWidth="100"/>
                                    <TableColumn fx:id="plasmaExpiryColumn" text="Expiry Date" prefWidth="120"/>
                                    <TableColumn fx:id="plasmaActionColumn" text="Action" prefWidth="150"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </Tab>
                    
                    <!-- Ventilators Tab -->
                    <Tab text="ðŸ« Ventilators">
                        <VBox spacing="15" styleClass="tab-content">
                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>
                            
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <Text text="Ventilator Management" styleClass="section-title"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button text="+ Add Ventilator" styleClass="btn-primary" onAction="#addVentilator"/>
                                <Button text="Update Status" styleClass="btn-secondary" onAction="#updateVentilatorStatus"/>
                            </HBox>
                            
                            <Separator/>
                            
                            <TableView fx:id="ventilatorsTable" prefHeight="400">
                                <columns>
                                    <TableColumn fx:id="ventSerialColumn" text="Serial Number" prefWidth="150"/>
                                    <TableColumn fx:id="ventTypeColumn" text="Type" prefWidth="120"/>
                                    <TableColumn fx:id="ventModelColumn" text="Model" prefWidth="150"/>
                                    <TableColumn fx:id="ventStatusColumn" text="Status" prefWidth="120"/>
                                    <TableColumn fx:id="ventLocationColumn" text="Location" prefWidth="150"/>
                                    <TableColumn fx:id="ventMaintenanceColumn" text="Next Maintenance" prefWidth="150"/>
                                    <TableColumn fx:id="ventActionColumn" text="Action" prefWidth="150"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </Tab>
                    
                    <!-- Requests Tab -->
                    <Tab text="ðŸ“‹ Requests">
                        <VBox spacing="15" styleClass="tab-content">
                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>
                            
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <Text text="Pending Requests" styleClass="section-title"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <ComboBox fx:id="requestFilterCombo" promptText="Filter by urgency"/>
                                <Button text="Refresh" styleClass="btn-outline" onAction="#refreshRequests"/>
                            </HBox>
                            
                            <Separator/>
                            
                            <TableView fx:id="requestsTable" prefHeight="450">
                                <columns>
                                    <TableColumn fx:id="reqIdColumn" text="ID" prefWidth="60"/>
                                    <TableColumn fx:id="reqTypeColumn" text="Type" prefWidth="100"/>
                                    <TableColumn fx:id="reqPatientColumn" text="Patient" prefWidth="150"/>
                                    <TableColumn fx:id="reqBloodGroupColumn" text="Blood Group" prefWidth="100"/>
                                    <TableColumn fx:id="reqQuantityColumn" text="Quantity" prefWidth="100"/>
                                    <TableColumn fx:id="reqUrgencyColumn" text="Urgency" prefWidth="100"/>
                                    <TableColumn fx:id="reqDateColumn" text="Date" prefWidth="150"/><TableColumn fx:id="reqDateColumn" text="Date" prefWidth="150"/>
                                    <TableColumn fx:id="reqActionColumn" text="Action" prefWidth="180"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </Tab>
                    
                    <!-- Reports Tab -->
                    <Tab text="ðŸ“Š Reports">
                        <VBox spacing="20" styleClass="tab-content" alignment="CENTER">
                            <padding>
                                <Insets top="40" right="40" bottom="40" left="40"/>
                            </padding>
                            
                            <Text text="Generate Reports" styleClass="section-title"/>
                            
                            <GridPane hgap="20" vgap="20" alignment="CENTER">
                                <VBox spacing="15" styleClass="report-card" alignment="CENTER" 
                                     GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <padding>
                                        <Insets top="30" right="30" bottom="30" left="30"/>
                                    </padding>
                                    <Text text="ðŸ“ˆ" style="-fx-font-size: 48px;"/>
                                    <Text text="Inventory Report" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                                    <Button text="Generate" styleClass="btn-primary" onAction="#generateInventoryReport"/>
                                </VBox>
                                
                                <VBox spacing="15" styleClass="report-card" alignment="CENTER"
                                     GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <padding>
                                        <Insets top="30" right="30" bottom="30" left="30"/>
                                    </padding>
                                    <Text text="ðŸ“‹" style="-fx-font-size: 48px;"/>
                                    <Text text="Request Summary" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                                    <Button text="Generate" styleClass="btn-primary" onAction="#generateRequestReport"/>
                                </VBox>
                                
                                <VBox spacing="15" styleClass="report-card" alignment="CENTER"
                                     GridPane.columnIndex="0" GridPane.rowIndex="1">
                                    <padding>
                                        <Insets top="30" right="30" bottom="30" left="30"/>
                                    </padding>
                                    <Text text="ðŸ“Š" style="-fx-font-size: 48px;"/>
                                    <Text text="Monthly Statistics" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                                    <Button text="Generate" styleClass="btn-primary" onAction="#generateMonthlyReport"/>
                                </VBox>
                                
                                <VBox spacing="15" styleClass="report-card" alignment="CENTER"
                                     GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <padding>
                                        <Insets top="30" right="30" bottom="30" left="30"/>
                                    </padding>
                                    <Text text="ðŸ“„" style="-fx-font-size: 48px;"/>
                                    <Text text="Export All Data" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                                    <Button text="Export" styleClass="btn-secondary" onAction="#exportData"/>
                                </VBox>
                            </GridPane>
                        </VBox>
                    </Tab>
                    
                </TabPane>
                
            </VBox>
        </ScrollPane>
    </center>
    
</BorderPane>
