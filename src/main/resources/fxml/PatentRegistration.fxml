<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.PatientRegistrationController"
            prefWidth="700" prefHeight="800"
            style="-fx-background-color: #f8f9fa;">

    <!-- Header (Fixed at top) -->
    <top>
        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 20;">
            <Text text="ðŸ‘¤" style="-fx-font-size: 48px;"/>
            <Text text="Patient Registration"
                  style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #667eea;"/>
            <Text text="Register to request blood, plasma, or ventilator support."
                  style="-fx-font-size: 14px; -fx-fill: #7f8c8d;"/>
        </VBox>
    </top>

    <!-- Scrollable center area -->
    <center>
        <ScrollPane fitToWidth="true"
                    pannable="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox alignment="TOP_CENTER" spacing="20"
                      style="-fx-background-color: white; -fx-padding: 30;">
                    
                    <padding>
                        <Insets top="10" right="30" bottom="30" left="30"/>
                    </padding>

                    <!-- Error Label -->
                    <Label fx:id="errorLabel" visible="false"
                           wrapText="true" maxWidth="600"
                           style="-fx-text-fill: #e74c3c; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-color: #fadbd8; -fx-padding: 10; -fx-background-radius: 5;"/>

                    <!-- Account Details -->
                    <VBox spacing="15" maxWidth="600">
                        <Text text="Account Information"
                              style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-fill: #2c3e50;"/>
                        <Separator/>
                        <GridPane hgap="15" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints minWidth="150" prefWidth="150"/>
                                <ColumnConstraints minWidth="400" prefWidth="400" hgrow="ALWAYS"/>
                            </columnConstraints>

                            <Label text="Username *" GridPane.columnIndex="0" GridPane.rowIndex="0"
                                   style="-fx-font-weight: 500;"/>
                            <TextField fx:id="usernameField" promptText="Choose a unique username"
                                       GridPane.columnIndex="1" GridPane.rowIndex="0"
                                       style="-fx-pref-height: 35;"/>

                            <Label text="Email *" GridPane.columnIndex="0" GridPane.rowIndex="1"
                                   style="-fx-font-weight: 500;"/>
                            <TextField fx:id="emailField" promptText="your.email@example.com"
                                       GridPane.columnIndex="1" GridPane.rowIndex="1"
                                       style="-fx-pref-height: 35;"/>

                            <Label text="Phone *" GridPane.columnIndex="0" GridPane.rowIndex="2"
                                   style="-fx-font-weight: 500;"/>
                            <TextField fx:id="phoneField" promptText="10-digit mobile number"
                                       GridPane.columnIndex="1" GridPane.rowIndex="2"
                                       style="-fx-pref-height: 35;"/>

                            <Label text="Password *" GridPane.columnIndex="0" GridPane.rowIndex="3"
                                   style="-fx-font-weight: 500;"/>
                            <PasswordField fx:id="passwordField" promptText="Minimum 8 characters"
                                           GridPane.columnIndex="1" GridPane.rowIndex="3"
                                           style="-fx-pref-height: 35;"/>

                            <Label text="Confirm Password *" GridPane.columnIndex="0" GridPane.rowIndex="4"
                                   style="-fx-font-weight: 500;"/>
                            <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password"
                                           GridPane.columnIndex="1" GridPane.rowIndex="4"
                                           style="-fx-pref-height: 35;"/>
                        </GridPane>
                    </VBox>

                    <!-- Personal Details -->
                    <VBox spacing="15" maxWidth="600">
                        <Text text="Personal Information"
                              style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-fill: #2c3e50;"/>
                        <Separator/>
                        <GridPane hgap="15" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints minWidth="150" prefWidth="150"/>
                                <ColumnConstraints minWidth="400" prefWidth="400" hgrow="ALWAYS"/>
                            </columnConstraints>

                            <Label text="Full Name *" GridPane.columnIndex="0" GridPane.rowIndex="0"
                                   style="-fx-font-weight: 500;"/>
                            <TextField fx:id="fullNameField" promptText="Enter your full name"
                                       GridPane.columnIndex="1" GridPane.rowIndex="0"
                                       style="-fx-pref-height: 35;"/>

                            <Label text="Blood Group *" GridPane.columnIndex="0" GridPane.rowIndex="1"
                                   style="-fx-font-weight: 500;"/>
                            <ComboBox fx:id="bloodGroupCombo" promptText="Select blood group"
                                      GridPane.columnIndex="1" GridPane.rowIndex="1"
                                      prefWidth="400" style="-fx-pref-height: 35;"/>

                            <Label text="Date of Birth *" GridPane.columnIndex="0" GridPane.rowIndex="2"
                                   style="-fx-font-weight: 500;"/>
                            <DatePicker fx:id="dobPicker" promptText="Select date"
                                        GridPane.columnIndex="1" GridPane.rowIndex="2"
                                        prefWidth="400" style="-fx-pref-height: 35;"/>

                            <Label text="Gender *" GridPane.columnIndex="0" GridPane.rowIndex="3"
                                   style="-fx-font-weight: 500;"/>
                            <ComboBox fx:id="genderCombo" promptText="Select gender"
                                      GridPane.columnIndex="1" GridPane.rowIndex="3"
                                      prefWidth="400" style="-fx-pref-height: 35;"/>

                            <Label text="Emergency Contact *" GridPane.columnIndex="0" GridPane.rowIndex="4"
                                   style="-fx-font-weight: 500;"/>
                            <TextField fx:id="emergencyContactField" promptText="Emergency contact number"
                                       GridPane.columnIndex="1" GridPane.rowIndex="4"
                                       style="-fx-pref-height: 35;"/>
                        </GridPane>
                    </VBox>

                    <!-- Address Details -->
                    <VBox spacing="15" maxWidth="600">
                        <Text text="Address Information"
                              style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-fill: #2c3e50;"/>
                        <Separator/>
                        <GridPane hgap="15" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints minWidth="150" prefWidth="150"/>
                                <ColumnConstraints minWidth="400" prefWidth="400" hgrow="ALWAYS"/>
                            </columnConstraints>

                            <Label text="Address *" GridPane.columnIndex="0" GridPane.rowIndex="0"
                                   style="-fx-font-weight: 500;" VBox.vgrow="NEVER"/>
                            <TextArea fx:id="addressArea" promptText="Enter your complete address"
                                      prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="0"
                                      wrapText="true"/>

                            <Label text="City *" GridPane.columnIndex="0" GridPane.rowIndex="1"
                                   style="-fx-font-weight: 500;"/>
                            <TextField fx:id="cityField" promptText="Enter city"
                                       GridPane.columnIndex="1" GridPane.rowIndex="1"
                                       style="-fx-pref-height: 35;"/>

                            <Label text="State *" GridPane.columnIndex="0" GridPane.rowIndex="2"
                                   style="-fx-font-weight: 500;"/>
                            <ComboBox fx:id="stateCombo" promptText="Select state"
                                      GridPane.columnIndex="1" GridPane.rowIndex="2"
                                      prefWidth="400" style="-fx-pref-height: 35;"/>

                            <Label text="Pincode *" GridPane.columnIndex="0" GridPane.rowIndex="3"
                                   style="-fx-font-weight: 500;"/>
                            <TextField fx:id="pincodeField" promptText="6-digit pincode"
                                       GridPane.columnIndex="1" GridPane.rowIndex="3"
                                       style="-fx-pref-height: 35;"/>
                        </GridPane>
                    </VBox>

                    <Separator maxWidth="600"/>

                    <!-- Terms and Conditions -->
                    <HBox spacing="10" alignment="CENTER_LEFT" maxWidth="600">
                        <CheckBox fx:id="termsCheckbox"/>
                        <Text text="I agree to the Terms and Conditions" style="-fx-font-size: 13px;"/>
                    </HBox>

                    <!-- Buttons -->
                    <HBox spacing="15" alignment="CENTER">
                        <Button text="Register" onAction="#handleRegister"
                                styleClass="btn-primary" prefWidth="200" prefHeight="45"
                                style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                        <Button text="Cancel" onAction="#handleCancel"
                                styleClass="btn-secondary" prefWidth="200" prefHeight="45"
                                style="-fx-font-size: 14px;"/>
                    </HBox>

                    <Region prefHeight="30"/> <!-- Bottom Spacer -->
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>