<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.*?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.FrontPageController" 
           prefWidth="1500" prefHeight="1500">

    <ImageView fitHeight="1000" fitWidth="1500" pickOnBounds="true" preserveRatio="false">
        <image>
