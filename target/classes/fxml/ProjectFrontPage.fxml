        </VBox>

        <VBox spacing="10" maxWidth="600" style="-fx-border-color: #764ba2; -fx-border-width: 2px; -fx-padding: 20; -fx-background-color: rgba(255, 255, 255, 0.1); -fx-background-radius: 15;">
            <Text text="Team Members" 
                  style="-fx-fill: white; -fx-font-size: 22px; -fx-font-weight: bold; -fx-underline: true;"/>
            
            <GridPane hgap="20" vgap="5" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="LEFT" minWidth="250"/>
                    <ColumnConstraints halignment="LEFT" minWidth="150"/>
                </columnConstraints>
                
                <Text text="1. SHREE GANESH" style="-fx-fill: #eee; -fx-font-size: 16px; -fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Text text="1GA22IS145" style="-fx-fill: #ccc; -fx-font-size: 16px;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Text text="2. SRUJANGOWDA" style="-fx-fill: #eee; -fx-font-size: 16px; -fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
