                <Text text="4. YASHWANTHGOWDA D.K" style="-fx-fill: #eee; -fx-font-size: 16px; -fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Text text="1GA23IS188" style="-fx-fill: #ccc; -fx-font-size: 16px;" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>
        </VBox>
        
        <Region VBox.vgrow="ALWAYS"/>

        <Button fx:id="launchButton" text="CLICK TO LAUNCH PROJECT" 
                onAction="#launchProject"
                style="-fx-font-size: 20px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 40; -fx-background-radius: 30; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 2);"/>

    </VBox>
