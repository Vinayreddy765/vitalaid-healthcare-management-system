        </VBox>
        
        <Text text="VITAL AID UNIFIED BLOOD, PLASMA AND VENTILATOR MANAGEMENT SYSTEM" 
              textAlignment="CENTER" wrappingWidth="900"
              style="-fx-fill: #ffffff; -fx-font-size: 36px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, black, 10, 0, 0, 0);"/>

        <VBox alignment="CENTER" spacing="5">
            <Text text="Project Guided By:" 
                  style="-fx-fill: #ddd; -fx-font-size: 18px;"/>
