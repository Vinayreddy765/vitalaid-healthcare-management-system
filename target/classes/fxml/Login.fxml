<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.LoginController" styleClass="root">
    
    <!-- Left Panel - Branding -->
    <left>
        <VBox alignment="CENTER" spacing="20" styleClass="left-panel" prefWidth="400">
            <padding>
                <Insets top="50" right="30" bottom="50" left="30"/>
            </padding>
            
            <!-- Logo/Icon -->
            <ImageView fitHeight="120" fitWidth="120" preserveRatio="true">
                <image>
                    <Image url="@../images/logo.jpg"/>
                </image>
            </ImageView>
            
            <!-- App Title -->
            <VBox alignment="CENTER" spacing="10">
                <Text text="VitalAid" styleClass="app-title"/>
                <Text text="Unified Blood, Plasma &amp; Ventilator Management" 
                      styleClass="app-subtitle" textAlignment="CENTER" wrappingWidth="300"/>
            </VBox>
            
            <!-- Features List -->
            <VBox spacing="15" styleClass="features-box">
                <padding>
                    <Insets top="30" right="20" bottom="30" left="20"/>
                </padding>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Text text="✓" styleClass="feature-icon"/>
                    <Text text="Real-time Donor Matching" styleClass="feature-text"/>
                </HBox>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Text text="✓" styleClass="feature-icon"/>
                    <Text text="Smart Inventory Management" styleClass="feature-text"/>
                </HBox>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Text text="✓" styleClass="feature-icon"/>
                    <Text text="Emergency Request Processing" styleClass="feature-text"/>
                </HBox>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Text text="✓" styleClass="feature-icon"/>
                    <Text text="Ventilator Availability Tracking" styleClass="feature-text"/>
                </HBox>
            </VBox>
            
            <Text text="Saving Lives Through Technology" styleClass="tagline"/>
        </VBox>
    </left>
    
    <!-- Right Panel - Login Form -->
    <center>
        <VBox alignment="CENTER" spacing="25" styleClass="login-panel" prefWidth="600">
            <padding>
                <Insets top="50" right="80" bottom="50" left="80"/>
            </padding>
            
            <!-- Login Title -->
            <VBox alignment="CENTER" spacing="5">
                <Text text="Welcome Back" styleClass="login-title"/>
                <Text text="Login to continue" styleClass="login-subtitle"/>
            </VBox>
            
            <!-- Login Form -->
            <VBox spacing="20" styleClass="form-container">
                
                <!-- Username Field -->
                <VBox spacing="8">
                    <Label text="Username" styleClass="form-label"/>
                    <TextField fx:id="usernameField" promptText="Enter your username" 
                              styleClass="form-input"/>
                </VBox>
                
                <!-- Password Field -->
                <VBox spacing="8">
                    <Label text="Password" styleClass="form-label"/>
                    <PasswordField fx:id="passwordField" promptText="Enter your password" 
                                  styleClass="form-input"/>
                </VBox>
                
                <!-- Error Label -->
                <Label fx:id="errorLabel" styleClass="error-label" visible="false" 
                       wrapText="true" maxWidth="400"/>
                
                <!-- Remember Me & Forgot Password -->
                <HBox spacing="10" alignment="CENTER">
                    <CheckBox fx:id="rememberMeCheckbox" text="Remember me" 
                             styleClass="checkbox"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Hyperlink text="Forgot Password?" styleClass="link"/>
                </HBox>
                
                <!-- Login Button -->
                <Button fx:id="loginButton" text="Login" onAction="#handleLogin" 
                       styleClass="btn-primary" prefWidth="400" prefHeight="45"/>
                
                <!-- Divider -->
                <HBox alignment="CENTER" spacing="10">
                    <Separator prefWidth="150" HBox.hgrow="ALWAYS"/>
                    <Text text="OR" styleClass="divider-text"/>
                    <Separator prefWidth="150" HBox.hgrow="ALWAYS"/>
                </HBox>
                
                <!-- Registration Options -->
                <VBox spacing="10" alignment="CENTER">
                    <Text text="Don't have an account?" styleClass="register-text"/>
                    
                    <HBox spacing="10" alignment="CENTER">
                        <Button text="Register as Donor" onAction="#showDonorRegistration" 
                               styleClass="btn-secondary" prefWidth="185"/>
                        <Button text="Register as Patient" onAction="#showPatientRegistration" 
                               styleClass="btn-secondary" prefWidth="185"/>
                    </HBox>
                    
                    <Button text="Register as Hospital" onAction="#showHospitalRegistration" 
                           styleClass="btn-outline" prefWidth="385"/>
                </VBox>
            </VBox>
            
            <!-- Footer -->
            <VBox alignment="CENTER" spacing="5">
                <padding>
                    <Insets top="30"/>
                </padding>
                <Text text="© 2025 VitalAid Team | Global Academy of Technology" 
                     styleClass="footer-text"/>
                <Text text="Version 1.0.0" styleClass="version-text"/>
            </VBox>
        </VBox>
    </center>
    
</BorderPane> 