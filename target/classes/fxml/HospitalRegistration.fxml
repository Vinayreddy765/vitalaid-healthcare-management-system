<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!-- Make the form scrollable -->
<ScrollPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.HospitalRegistrationController"
            fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
            styleClass="scroll-pane">

    <content>
        <VBox spacing="20" styleClass="registration-form" prefWidth="650" prefHeight="800">
            
            <padding>
                <Insets top="30" right="40" bottom="30" left="40"/>
            </padding>
            
            <!-- Header -->
            <VBox spacing="10" alignment="CENTER">
                <Text text="ðŸ¥" style="-fx-font-size: 48px;"/>
                <Text text="Hospital Registration" styleClass="form-title" 
                     style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #667eea;"/>
                <Text text="Register your hospital to manage blood bank and ventilator resources." 
                     styleClass="form-subtitle" 
                     style="-fx-font-size: 14px; -fx-fill: #7f8c8d;"/>
                <Label text="âš ï¸ Registration requires admin approval" 
                      style="-fx-text-fill: #e67e22; -fx-font-size: 12px; -fx-font-weight: bold;"/>
            </VBox>
            
            <Separator/>
            
            <!-- Error Label -->
            <Label fx:id="errorLabel" styleClass="error-label" visible="false" 
                   wrapText="true" maxWidth="570"/>
            
            <!-- Account Details -->
            <VBox spacing="15">
                <Text text="Account Information" 
                     style="-fx-font-size: 16px; -fx-font-weight: 600; -fx-fill: #2c3e50;"/>
                
                <GridPane hgap="15" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints minWidth="150" prefWidth="150"/>
                        <ColumnConstraints minWidth="400" prefWidth="400"/>
                    </columnConstraints>
                    
                    <Label text="Username *" styleClass="form-label" 
                           GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="usernameField" promptText="Choose a unique username" 
                              styleClass="form-input"
                              GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Email *" styleClass="form-label" 
                           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="emailField" promptText="hospital@example.com" 
                              styleClass="form-input"
                              GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Phone *" styleClass="form-label" 
                           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="phoneField" promptText="10-digit contact number" 
                              styleClass="form-input"
                              GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Password *" styleClass="form-label" 
                           GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <PasswordField fx:id="passwordField" promptText="Minimum 8 characters" 
                                  styleClass="form-input"
                                  GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    
                    <Label text="Confirm Password *" styleClass="form-label" 
                           GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password" 
                                  styleClass="form-input"
                                  GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                </GridPane>
            </VBox>
            
            <Separator/>
            
            <!-- Hospital Details -->
            <VBox spacing="15">
                <Text text="Hospital Information" 
                     style="-fx-font-size: 16px; -fx-font-weight: 600; -fx-fill: #2c3e50;"/>
                
                <GridPane hgap="15" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints minWidth="150" prefWidth="150"/>
                        <ColumnConstraints minWidth="400" prefWidth="400"/>
                    </columnConstraints>
                    
                    <Label text="Hospital Name *" styleClass="form-label" 
                           GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="hospitalNameField" promptText="Enter hospital name" 
                              styleClass="form-input"
                              GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Registration No *" styleClass="form-label" 
                           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="registrationNumberField" promptText="Hospital registration number" 
                              styleClass="form-input"
                              GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="License Number" styleClass="form-label" 
                           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="licenseNumberField" promptText="Medical license number (optional)" 
                              styleClass="form-input"
                              GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Contact Person *" styleClass="form-label" 
                           GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="contactPersonField" promptText="Administrator/Manager name" 
                              styleClass="form-input"
                              GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    
                    <Label text="Bed Capacity *" styleClass="form-label" 
                           GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <TextField fx:id="bedCapacityField" promptText="Total bed capacity" 
                              styleClass="form-input"
                              GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                </GridPane>
            </VBox>
            
            <Separator/>
            
            <!-- Address Details -->
            <VBox spacing="15">
                <Text text="Address Information" 
                     style="-fx-font-size: 16px; -fx-font-weight: 600; -fx-fill: #2c3e50;"/>
                
                <GridPane hgap="15" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints minWidth="150" prefWidth="150"/>
                        <ColumnConstraints minWidth="400" prefWidth="400"/>
                    </columnConstraints>
                    
                    <Label text="Address *" styleClass="form-label" 
                           GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextArea fx:id="addressArea" promptText="Complete hospital address" 
                             styleClass="form-input" prefRowCount="2"
                             GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="City *" styleClass="form-label" 
                           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="cityField" promptText="Enter city" 
                              styleClass="form-input"
                              GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="State *" styleClass="form-label" 
                           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <ComboBox fx:id="stateCombo" promptText="Select state" 
                             styleClass="form-input" prefWidth="400"
                             GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Pincode *" styleClass="form-label" 
                           GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="pincodeField" promptText="6-digit pincode" 
                              styleClass="form-input"
                              GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                </GridPane>
            </VBox>
            
            <Separator/>
            
            <!-- Facilities -->
            <VBox spacing="15">
                <Text text="Facilities Available" 
                     style="-fx-font-size: 16px; -fx-font-weight: 600; -fx-fill: #2c3e50;"/>
                
                <HBox spacing="30">
                    <CheckBox fx:id="hasBloodBankCheckbox" text="Blood Bank" 
                             selected="true" styleClass="checkbox" 
                             style="-fx-font-size: 14px;"/>
                    <CheckBox fx:id="hasPlasmaCheckbox" text="Plasma Bank" 
                             selected="true" styleClass="checkbox" 
                             style="-fx-font-size: 14px;"/>
                    <CheckBox fx:id="hasVentilatorsCheckbox" text="Ventilators" 
                             selected="true" styleClass="checkbox" 
                             style="-fx-font-size: 14px;"/>
                    <CheckBox fx:id="has24x7Checkbox" text="24Ã—7 Service" 
                             selected="true" styleClass="checkbox" 
                             style="-fx-font-size: 14px;"/>
                </HBox>
            </VBox>
            
            <Separator/>
            
            <!-- Terms and Conditions -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <CheckBox fx:id="termsCheckbox" styleClass="checkbox"/>
                <Text text="I confirm that all information provided is accurate and " 
                     style="-fx-font-size: 13px;"/>
                <Hyperlink text="agree to terms" style="-fx-font-size: 13px;"/>
            </HBox>
            
            <!-- Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Submit Registration" onAction="#handleRegister" 
                       styleClass="btn-primary" prefWidth="220" prefHeight="45"/>
                <Button text="Cancel" onAction="#handleCancel" 
                       styleClass="btn-secondary" prefWidth="180" prefHeight="45"/>
            </HBox>
            
            <!-- Footer Note -->
            <VBox alignment="CENTER" spacing="5">
                <Text text="* Required fields" 
                     style="-fx-font-size: 12px; -fx-fill: #e74c3c;"/>
                <Text text="Your registration will be reviewed by admin within 24-48 hours" 
                     style="-fx-font-size: 12px; -fx-fill: #7f8c8d;"/>
            </VBox>
            
        </VBox>
    </content>
</ScrollPane>
